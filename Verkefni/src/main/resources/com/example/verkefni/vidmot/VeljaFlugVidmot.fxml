<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.verkefni.vidmot.VeljaFlugController"
            prefHeight="550.0" prefWidth="700.0">

    <children>
        <Label layoutX="30.0" layoutY="20.0" text="First Name:" />
        <TextField fx:id="firstNameField" layoutX="120.0" layoutY="15.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="60.0" text="Last Name:" />
        <TextField fx:id="lastNameField" layoutX="120.0" layoutY="55.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="100.0" text="Phone:" />
        <TextField fx:id="phoneField" layoutX="120.0" layoutY="95.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="150.0" text="From:" />
        <ComboBox fx:id="departureLocationBox" layoutX="120.0" layoutY="145.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="190.0" text="To:" />
        <ComboBox fx:id="arrivalLocationBox" layoutX="120.0" layoutY="185.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="230.0" text="Date:" />
        <DatePicker fx:id="datePicker" layoutX="120.0" layoutY="225.0" prefWidth="200.0" />

        <Button text="Search Flights" layoutX="120.0" layoutY="270.0" onAction="#onSearchFlightsClick" />

        <Label layoutX="30.0" layoutY="320.0" text="Select Flight:" />
        <ComboBox fx:id="flugComboBox" layoutX="120.0" layoutY="315.0" prefWidth="400.0" />

        <Button text="Select Seat" layoutX="120.0" layoutY="370.0" onAction="#onViewSeatMapClick" />
    </children>
</AnchorPane>